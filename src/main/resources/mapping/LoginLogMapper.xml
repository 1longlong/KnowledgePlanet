<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.major.knowledgePlanet.mapper.LoginLogMapper">
    <insert id="addLoginLog" parameterType="LoginLog">
        insert into knowledge_planet.login_log(id,u_id,create_time,ip,status,browser)
        values(#{id},#{u_id},#{create_time},#{ip},#{status},#{browser});
    </insert>

    <select id="getLoginLogById" resultType="LoginLog" parameterType="Long">
        select id,u_id,create_time,ip,status,browser from knowledge_planet.login_log where u_id=#{u_id};
    </select>

</mapper>

